<%= render 'shared/navbar' %>
<%= render 'shared/banner' %>

<div class="container">
  <h1 class="text-center">Cocktails</h1>
  <div class="row">
    <% @cocktails.each do |c| %>
      <div class="col-md-3">
        <div class="card">
          <h2><%= link_to c.name, cocktail_path(c) %></h2>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add Cocktails", new_cocktail_path %>
</div>

